
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>
<link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">


<div  style="width: 40%;">

  <br><br>

  <% if current_user? %>
      Bienvenido <b><%= current_user.nombre %></b>
  <% else %>
      No ha iniciado sesión
  <% end %>

</div>

<br><br>


<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <div class="text-center">
          <%= image_tag("logo.PNG", :size => '290x188')%></div>
      </div>
      <div class="modal-body">

        <%= form_for(:session, url: session_path, :class => 'form col-md-12 center-block') do |f| %>
            <div class="form-group">
              <%= f.text_field :email, value: params[:session].try(:[], :email), :placeholder => 'Email', :class => 'form-control input-lg' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, :class => 'form-control input-lg', :placeholder => 'Password' %>
            </div>
            <div class="form-group">
              <%= f.submit 'Entrar', :class => 'btn btn-primary btn-lg btn-block' %>
            </div>

        <% end %>

      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
<!-- script references -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>









